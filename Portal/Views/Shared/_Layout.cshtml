@{
    var layout = ViewBag.Layout;
    var menuItems = layout.Links;
    var title = layout.PageTitle;
    var myAccountText = layout.MyAccountText;
    List<Clinic.Database.Text> texts = layout.Texts;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg bg-body-tertiary navbar-border">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center ms-2" href="/">
            <h3 class="me-2 mb-0 text-dark">@title</h3>
            <img src="~/images/clinic-icon.png" alt="clinic icon" style="width: 40px; height: 40px;" />
        </a>

        <ul class="navbar-nav">
            @foreach (var menuItem in menuItems) {
                <li class="nav-item">
                    <a class="nav-link text-dark me-2 text-decoration-underline-class" href="@menuItem.Link">@menuItem.Title</a>
                </li>
            }

            <li class="nav-item">
                <a class="btn btn-success me-2 text-white" href="/account">@myAccountText</a>
            </li>
        </ul>
        </div>
    </div>
    </nav>

    <div class="container-fluid bg-body-tertiary pt-2 pb-3">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col text-center">
        <h5>@texts.FirstOrDefault(t => t.Key == "menu_loc_text").Content</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-pin-map-fill"></i>
            <p class="ms-2 mb-0">@texts.FirstOrDefault(t => t.Key == "menu_loc_value").Content</p>
        </div>
        </div>
        <div class="col text-center">
        <h5>@texts.FirstOrDefault(t => t.Key == "menu_time_text").Content</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-clock"></i>
            <p class="ms-2 mb-0">@texts.FirstOrDefault(t => t.Key == "menu_time_value").Content</p>
        </div>
        </div>
        <div class="col text-center">
        <h5>@texts.FirstOrDefault(t => t.Key == "menu_phone_text").Content</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-telephone-fill" ></i>
            <p class="ms-2 mb-0">@texts.FirstOrDefault(t => t.Key == "menu_phone_value").Content</p>
        </div>
        </div>
    </div>
    </div>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="text-center">
                    &copy; 2025 Przychodnia Lekarska Świtałka
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
