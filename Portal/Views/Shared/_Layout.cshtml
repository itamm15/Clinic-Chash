@{
    var menuItems = new List<(string Link, string Title)>
    {
        ("/", "STRONA GŁÓWNA"),
        ("/about", "O NAS"),
        ("/doctors", "SPECJALIŚCI"),
        ("/services", "USŁUGI"),
        ("/contact", "KONTAKT")
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary navbar-border">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center ms-2" href="/">
            <h3 class="me-2 mb-0 text-dark">Przychodnia lekarska</h3>
            <img src="~/images/clinic-icon.png" alt="clinic icon" style="width: 40px; height: 40px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end me-2" id="main-navbar">
        <ul class="navbar-nav">
            @foreach (var menuItem in menuItems) {
                <li class="nav-item">
                    <a class="nav-link text-dark me-2 text-decoration-underline-class" href="@menuItem.Link">@menuItem.Title</a>
                </li>
            }

            <li class="nav-item">
                <a class="btn btn-success me-2 text-white" href="/account">Moje konto</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-success me-2 text-white" href="/calendar">Umów wizytę</a>
            </li>
        </ul>
        </div>
    </div>
    </nav>

    <div class="container-fluid bg-body-tertiary pt-2 pb-3">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col text-center">
        <h5>Lokalizacja:</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-pin-map-fill"></i>
            <p class="ms-2 mb-0">Nad Reglami 23, 34-520 Zakopane</p>
        </div>
        </div>
        <div class="col text-center">
        <h5>Godziny otwarcia:</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-clock"></i>
            <p class="ms-2 mb-0">Poniedziałek - Piątek: 8:00 - 19:00</p>
        </div>
        </div>
        <div class="col text-center">
        <h5>Numer kontaktowy:</h5>
        <div class="d-flex justify-content-center align-items-center">
            <i class="bi bi-telephone-fill" ></i>
            <p class="ms-2 mb-0">+48 123 456 789</p>
        </div>
        </div>
    </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
