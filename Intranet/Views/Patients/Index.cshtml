@model List<Patient>
@{
  ViewData["Title"] = "Pacjenci";

}

<div class="container-fluid py-5">
  <div class="d-flex justify-content-between">
    <h3>Pacjenci</h3>
    <button type="button" class="btn btn-success">Dodaj pacjenta</button>
  </div>
  @if (!Model.Any()) {
    <p>Nie ma pacjentow</p>
  }
  else
  {
   <table class="table table-striped my-4">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Imię</th>
        <th scope="col">Nazwisko</th>
        <th scope="col">Data urodzenia</th>
        <th scope="col">Adres zamieszkania</th>
        <th scope="col">Numer telefonu</th>
        <th scope="col">Akcje</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var patient in Model)
      {
        <tr>
          <th scope="row">@patient.Id</th>
          <th scope="row">@patient.FirstName</th>
          <th scope="row">@patient.LastName</th>
          <th scope="row">@patient.DateOfBirth</th>
          <th scope="row">@patient.Address</th>
          <th scope="row">@patient.PhoneNumber</th>
          <th>
            <a href="#" class="btn btn-outline-primary btn-sm me-1" title="Edytuj">
              <i class="bi bi-pencil-square"></i>
            </a>
            <a href="#" class="btn btn-outline-danger btn-sm me-1" title="Usuń">
              <i class="bi bi-trash-fill"></i>
            </a>
            <a href="#" class="btn btn-outline-secondary btn-sm" title="Zobacz">
              <i class="bi bi-eye-fill"></i>
            </a>
          </th>
        </tr>
      }
    </tbody>
  </table>
  }
</div>
