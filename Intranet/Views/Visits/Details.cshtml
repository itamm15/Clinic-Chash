@model Clinic.Database.Visit

@{
    ViewData["Title"] = "Szczegóły wizyty";
}

<div class="container-fluid py-5" style="width: 500px">
    <h3 class="mb-4">Szczegóły wizyty</h3>

    <div class="mb-3">
        <label class="form-label">Data wizyty</label>
        <input class="form-control" value="@Model.VisitDate" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Powód wizyty</label>
        <input class="form-control" value="@Model.VisitReason" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Pacjent</label>
        <input class="form-control" value="@($"{Model.Patient?.FirstName} {Model.Patient?.LastName}")" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Lekarz</label>
        <input class="form-control" value="@($"{Model.Doctor?.Name} {Model.Doctor?.LastName}")" readonly />
    </div>

    <div class="modal-footer">
        <a asp-action="Index" class="btn btn-secondary m-2">Powrót</a>
    </div>
</div>
