@model Clinic.Database.Examination

@{
    ViewData["Title"] = "Szczegóły badania";
}

<div class="container-fluid py-5" style="width: 500px">
    <h3 class="mb-4">Szczegóły badania</h3>

    <div class="mb-3">
        <label class="form-label">Nazwa</label>
        <input class="form-control" value="@Model.Name" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Opis</label>
        <input class="form-control" value="@Model.Description" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Lekarz prowadzący</label>
        <input class="form-control" value="@($"{Model.Doctor.Name} {Model.Doctor.LastName}")" readonly />
    </div>

    <div class="modal-footer">
        <a asp-action="Index" class="btn btn-secondary m-2">Powrót</a>
    </div>
</div>
