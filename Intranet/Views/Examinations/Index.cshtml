@model IEnumerable<Clinic.Database.Examination>

@{
    ViewData["Title"] = "Badania";
}
<p>
    <div class="d-flex justify-content-between">
        <h3>Badania</h3>
        <a asp-action="Create" class="btn btn-success">Dodaj badanie</a>
    </div>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Lekarz prowadzący</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.Doctor.Name @item.Doctor.LastName
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1" title="Edytuj">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1" title="Zobacz">
                    <i class="bi bi-eye-fill"></i>
                </a>
                <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm me-1" title="Usuń" onclick="return confirm('Na pewno chcesz usunąć to badanie?');">
                        <i class="bi bi-trash-fill"></i>
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
